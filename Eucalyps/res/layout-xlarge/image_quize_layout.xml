<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical" >

    <include layout="@layout/score_bar" />

    <ScrollView
        android:id="@+id/imageframe"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="140dp"
        android:paddingLeft="92dp"
        android:paddingRight="92dp"
        android:paddingTop="140dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/storytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginTop="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="25dip"
                android:textStyle="bold" 
                android:text="textview1" >
            </TextView>

            <TextView
                android:id="@+id/instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/storytext"
                android:layout_marginBottom="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="25dip"
                android:textStyle="bold" 
                android:text="textview2" >
            </TextView>

            <LinearLayout
                android:id="@+id/image_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/instruction"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <ImageView
                    android:id="@+id/quizimage1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_uef"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/quizimage2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_uef"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/image_top"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <ImageView
                    android:id="@+id/quizimage3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_uef" 
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/quizimage4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_uef" 
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>