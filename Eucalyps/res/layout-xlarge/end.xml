<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/story_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cert_bg"
    android:paddingBottom="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/story_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" 
        android:padding="10dp" >

        <ImageView
            android:id="@+id/dip_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/seal"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/story_congratulations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/dip_image"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:text="Congratulations!"
            android:textColor="#000000"
            android:textSize="64dip"
            android:textStyle="bold"
            android:layout_centerVertical="true" />
        
        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dip_image"
            android:layout_below="@id/story_congratulations"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:text="72 points! You are a master of forestry!"
            android:textColor="#000000"
            android:textSize="24dip"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/story_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/story_top"
        android:padding="10dp" >

        <TextView
            android:id="@+id/story_shorttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Some text here"
            android:textColor="#000000"
            android:textSize="24dip"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ent_image"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_shorttext"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ent_tree"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/story_longtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ent_image"
            android:text="last text"
            android:textColor="#000000"
            android:textSize="24dip"
            android:textStyle="bold" />

        <Button
            android:id="@+id/story_continue"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_longtext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25sp"
            android:text="@string/cont"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>